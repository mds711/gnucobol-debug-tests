    "version": "0.2.0",
    "configurations": [
        {
            "name": "SuperBOL: debug (launch)",
            "type": "superbol-gdb",
            "request": "launch",
            "preLaunchTask": "SuperBOL: build (debug)",
            "target": "${file}",
            "arguments": "",
            "cwd": "${workspaceFolder}",
            "group": [],
            "coverage": false,
            "verbose": false,
            "gdbtty": true
        },
        {
            "name": "SuperBOL: debug (attach local)",
            "type": "superbol-gdb",
            "request": "attach",
            "pid": "${input:pid}",
            "target": "${file}",
            "arguments": "",
            "cwd": "${workspaceFolder}",
            "group": [],
            "verbose": false
        },
        {
            "name": "SuperBOL: debug (attach remote)",
            "type": "superbol-gdb",
            "request": "attach",
            "remoteDebugger": "${input:remoteDebugger}",
            "target": "${file}",
            "arguments": "",
            "cwd": "${workspaceFolder}",
            "group": [],
            "verbose": false
        }
    ]
}